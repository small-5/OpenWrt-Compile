#!/bin/sh
[ "$1" = gfw ] && M=1
C=$2
D=$3
E=0
T=1
shift 3
N=$(uci -q get overwall.@global[0].nf_ip)
X=$(lua /usr/share/overwall/auth A)/2axgmlws/KkFCtZkeAP
Y=$(lua /usr/share/overwall/auth B)
Z="lua /usr/share/overwall/auth C"

nf(){
	[ $E = 0 ] && return
	B=1
	while ! A=$(curl -Lfsm 5 -A "$Y" $X/$E$(eval $Z));do
		[ $B -ge 20 ] && break || let B++
		sleep 2
	done
	A=$(echo "$A" | base64 -d)
	for i in $A;do ipset add $1 $i 2>/dev/null;done
}

tg(){
	B=1
	while ! A=$(curl -Lfsm 5 -A "$Y" $X/ufk8kHo4ZpsOekg$(eval $Z));do
		[ $B -ge 20 ] && break || let B++
		sleep 2
	done
	A=$(echo "$A" | base64 -d)
	for i in $A;do ipset add $1 $i 2>/dev/null;done
}

for i in $*;do
	while ! nslookup $i >/dev/null 2>&1;do :;done
done

if [ "$N" = 1 ];then
	E=MnwTZoJKZA7F3xf
elif [ "$N" = 2 ];then
	E=S1WMOUf0VmdLPT9
fi

case $C in
	1)nf netflix;;
	2|4)nf blacklist;;
	3)nf youtube;;
esac

case $D in
	0)T=;;
	1)tg telegram;;
	2)tg blacklist;;
	3)tg youtube;;
	4)tg netflix;;
	5)tg custom;;
esac

if [ $M ];then
	if [ "$(uci -q get overwall.@global[0].pre_ip)" = 1 ];then
		[ $T ] || tg blacklist
		B=1
		while ! A=$(nslookup -q=TXT _spf.google.com | grep text | sed -e 's/"v=spf1//' -e 's/ ~all"//' -e 's/ include:/\n/g' | grep -v text);do
			[ $B -ge 20 ] && break || let B++
			sleep 2
		done
		for i in $A;do
			B=1
			while ! nslookup -q=TXT $i >/dev/null 2>&1;do
				[ $B -ge 20 ] && break || let B++
				sleep 2
			done
			B=$(nslookup -q=TXT $i | sed -e 's/"v=spf1//' -e 's/ ~all"//' -e 's/ ip.:/\n/g' | grep -E -o '([0-9]{1,3}\.){3}[0-9]{1,3}/[0-9]{1,2}')
			for i in $B;do ipset add blacklist $i 2>/dev/null;done
		done
	fi

	if [ "$(uci -q get overwall.@global[0].pre_domain)" = 1 ];then
		A=$(cat /etc/overwall/preload.list)
		for i in $A;do
			B=1
			while ! nslookup $i >/dev/null 2>&1;do
				[ $B -ge 20 ] && break || let B++
				sleep 2
			done
		done
		for i in $A;do
			B=1
			while ! curl --retry 3 -m 10 -o /dev/null -LsA "Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/86.0.4240.183 Safari/537.36" $i;do
				[ $B -ge 5 ] && break || let B++
				sleep 2
			done
		done
	fi
fi
